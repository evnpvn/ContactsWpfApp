<Window x:Class="Contacts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contacts"
        mc:Ignorable="d"
        Title="Contacts" Height="350" Width="500">
    <Grid>
        <StackPanel Margin="10">
            <Button x:Name="newContactButton" Content="New Contact" Click="NewContactButton_Click"/>
        </StackPanel>
        <DataGrid x:Name ="ContactsGrid" Margin="40" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Id}" Header="RecID"/>
                <DataGridTextColumn Binding="{Binding Path=Name}" Header="Name"/>
                <DataGridTextColumn Binding="{Binding Path=Email}" Header="Email" />
                <DataGridTextColumn Binding="{Binding Path=Phone}" Header="Phone number"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>

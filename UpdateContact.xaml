<Window x:Class="Contacts.UpdateContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contacts"
        mc:Ignorable="d"
        Title="Update Contact" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="UpdateNameBox"       Margin="0,0,0,5"/>
            <TextBox x:Name="UpdateEmailBox"      Margin="0,0,0,5"/>
            <TextBox x:Name="UpdatePhonenumBox"   Margin="0,0,0,5"/>
            <Button  x:Name="updateButton"  Margin="0,0,0,5" Background="LightYellow" Content="Update" Click="UpdateButton_Click" />
            <Button  x:Name="deleteButton"  Margin="0,0,0,5" Background="IndianRed" Content="Delete" Click="DeleteButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
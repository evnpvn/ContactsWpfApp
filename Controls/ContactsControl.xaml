<UserControl x:Class="Contacts.Controls.ContactsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Contacts.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="300">
    <Grid Background="LightGray">
        <StackPanel Margin="5">
            <TextBlock x:Name="NameTextBlock" Text="{Binding Name}" FontSize="15" FontWeight="Bold"/>
            <TextBlock x:Name="EmailTextBlock" Text="{Binding Email}" FontSize="12" Foreground="DodgerBlue"/>
            <TextBlock x:Name="PhoneTextBlock" Text="{Binding Phone}" FontSize="12"/>
        </StackPanel>
    </Grid>
</UserControl>
